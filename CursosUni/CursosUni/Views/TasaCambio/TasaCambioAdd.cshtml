@model DAL.TasaCambio

@{
    ViewBag.Title = "TasaCambioAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1 class="text-center">Cursos<small>Altas y Cambios de Cursos</small></h1>
</div>


@using (Html.BeginForm("Guardar", "TasaCambio", FormMethod.Post, new { id = "frm-tasa" }))
{

    @Html.HiddenFor(x => x.ID)

    <div class="form-group">
        @Html.LabelFor(model => model.Fecha, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Fecha, "{0:dd/MM/yyyy}" ,new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Fecha, null, new { @class = "label label-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Valor, new { @class =  "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Valor, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Valor, null, new { @class = "label label-danger" })
        </div>
    </div>

    <div class="text-left">
        <button data-ajax="true" data-confirm="Esta seguro de Guardar la tasa de cambio?"
                type="submit" class="btn btn-primary">
            Guardar
        </button>
        <a class="btn btn-primary" href="~/TasaCambio/TasaCambioListar">Regresar</a>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



